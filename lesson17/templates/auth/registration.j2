{% extends '_base.j2' %}
{% block title %}會員註冊{% endblock %}

{% block head %} {{super()}} {% endblock%}

{% block main %}
<div class="container">
    <form method="POST">
        {{ form.csrf_token }}
        <div class="mb-3">
            {{ form.username.label(class='form-label') }} 
            {{ form.username(class='form-control',size=20) }}
            {% if form.username.errors %}
            <div class="alert alert-danger" role="alert">
                username有錯誤
            </div>
            {% endif %}
        </div>

        <div class="mb-3">
            {{ form.email.label(class='form-label')}} 
            {{ form.email(class='form-control',size=30)}}
            {% if form.email.errors %}
            <div class="alert alert-danger" role="alert">
                <ul>
                {% for error in form.email.errors %}
                    <li>{{error}}<li>
                {% endfor %}
                </ul>
            </div>
            {% endif %}
        </div>
        

        <div class="mb-3">
            {{ form.password.label(class='form-label')}} 
            {{ form.password(class='form-control',size=30)}}
            {% if form.password.errors %}
            <div class="alert alert-danger" role="alert">
                password有錯誤
            </div>
            {% endif %}
        </div>

        <div class="mb-3">
            {{ form.confirm.label(class='form-label')}} 
            {{ form.confirm(class='form-control',size=30)}}
        </div>
        
        <div class="mb-3">
            <button type="submit" class="btn btn-primary">送出</botton>
        </div>


    </form>
</div>
{% endblock %}