{% extends "_base.j2" %}
{% block title %}登入會員{% endblock %}

{% block head %} {{super()}} {% endblock%}

{% block main %}
<div class="container">
    <form method="POST">

    {{ myform.csrf_token}}

    <div class="mb-3">    
    {{ myform.email_field.label(class='form-label') }}{{ myform.email_field(size=30,class='form-control') }}
    {% if myform.email_field.errors %}
        <div class="alert alert-danger" role="alert">
            <ul>
            {% for error in myform.email_field.errors %}
                <li>{{error}}<li>
            {% endfor %}
            </ul>
        </div>
    {% endif %}
    </div>

    <div class="mb-3"> 
    {{ myform.password_field.label(class='form-label') }} {{ myform.password_field(size=50,class='form-control') }}
    {% if myform.password_field.errors %}
        <div class="alert alert-danger" role="alert">
            <ul>
            {% for error in myform.password_field.errors %}
                <li>{{error}}<li>
            {% endfor %}
            </ul>
        </div>
    {% endif %}
    </div>

    <div class="mt-5"> 
    {{ myform.submit_field(class='btn btn-primary') }}
    </div>
    <a class="icon-link icon-link-hover mt-5" href="{{ url_for('auth.register')}}">
        註冊會員
    <svg class="bi" aria-hidden="true"><use xlink:href="#arrow-right"></use></svg>
    </a>
    </form>
</div>
{% endblock %}